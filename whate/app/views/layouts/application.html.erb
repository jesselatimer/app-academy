<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:message] %>
    <ul>
      <li><%= flash[:message] %></li>
    </ul>
  <% end %>
  <%= render "shared/errors" %>


<%= yield %>

<% if current_user %>
  <p><%= "Signed in as #{current_user.user_name}" %></p>
  <p><%=  button_to 'Log Out', session_url, method: :delete %></p>
<% else %>
  <p><%=  link_to 'Log In', new_session_url %></p>
<% end %>

</body>
</html>
