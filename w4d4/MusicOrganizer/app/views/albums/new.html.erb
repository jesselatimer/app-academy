<h1>New Album!</h1>

<form action="/albums" method="post">
  <%= auth_token %>

  <label for="album_band">Band</label>
  <select name="album[band_id]" id="album_band">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>"<%= " selected" if band.id == params[:band_id].to_i %>>
      <%= band.name %>
    </option>
    <% end %>
  </select>
  <br><br>

  <label for="album_title">Album Title</label>
  <input type="text"
         name="album[title]"
         value="<%= @album.title %>"
         id="album_title">
         <br><br>

  <label for="studio">Studio</label>
  <input type="radio" name="album[studio]" value="STUDIO" id="studio"
  <%= " checked" if @album.studio == "STUDIO" %>>
  <br>

  <label for="live">Live</label>
  <input type="radio" name="album[studio]" value="LIVE" id="live"
  <%= " checked" if @album.studio == "LIVE" %>>
  <br><br>

  <input type="submit">
</form>
