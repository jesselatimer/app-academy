<h1>Edit <%= @band.name %>!</h1>

<form action="/bands/<%= @band.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <%= auth_token %>

  <label for="band_name">Band Name</label>
  <input type="text"
         name="band[name]"
         value="<%= @band.name %>"
         id="band_name">
         <br><br>

  <input type="submit">
</form>
