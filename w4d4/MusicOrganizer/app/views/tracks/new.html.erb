<h1>New Track!</h1>

<form action="/tracks" method="post">
  <%= auth_token %>

  <label for="track_album">Album</label>
  <select name="track[album_id]" id="track_album">
    <% @albums.each do |album| %>
      <option value="<%= album.id %>"
        <%= " selected" if album.id == params[:album_id].to_i %>>
        <%= album.title %>
      </option>
    <% end %>
  </select>
  <br><br>

  <label for="track_title">Track Title</label>
  <input type="text"
         name="track[title]"
         value="<%= @track.title %>"
         id="track_title">
         <br><br>

   <label for="regular">Regular Track</label>
   <input type="radio" name="track[bonus]" value="REGULAR" id="regular"
   <%= " checked" if @track.bonus == "REGULAR" %>>
   <br>

   <label for="bonus">Bonus Track</label>
   <input type="radio" name="track[bonus]" value="BONUS" id="bonus"
   <%= " checked" if @track.bonus == "BONUS" %>>
   <br><br>

  <label for="lyrics">Lyrics (optional)</label>
  <textarea name="track[lyrics]" id="lyrics"><%= @track.lyrics %></textarea>
  <br><br>

  <input type="submit">
</form>
