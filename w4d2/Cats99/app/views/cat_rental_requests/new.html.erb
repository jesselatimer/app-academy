<h1>Order a Cat Rental!</h1>
<form action="<%=cat_rental_requests_url%>" method="POST">
  <label for="cat_request">Select a Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_request">
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"
        <%= "selected" if @rental_request.cat_id == cat.id %>>
        <%= cat.name %>
      </option>
    <% end %>
  </select>

  <br><br>

  <label for="start_date">Choose Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" value="<%=@rental_request.start_date%>" id="start_date">
  <label for="end_date">Choose End Date</label>
  <input type="date" name="cat_rental_request[end_date]" value="<%=@rental_request.end_date%>" id="end_date">

  <input type="submit" value="Submit!">
</form>

<%= link_to "Back to All Cats", cats_url %>
