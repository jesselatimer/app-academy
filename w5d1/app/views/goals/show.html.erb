<h1><%= @goal.text %></h1>

<p>This is a <%= @goal.privateer? ? "private" : "public" %> goal.</p>
<p>Goal <%= @goal.completed ? "completed" : "in progress" %></p>

<% if !@goal.completed? && @goal.user_id == current_user.id %>
  <p>
    <%= button_to "Mark as Completed",
          goal_url(@goal),
          method: :patch,
          params: { "goal[completed]" => "true" } %>
  </p>
<% end %>

<% if @goal.user_id == current_user.id %>
  <p>
    <%= link_to "Edit Goal", edit_goal_url(@goal) %> |
    <%= button_to "Delete Goal",
          goal_url(@goal),
          method: :delete,
          id: "delete",
          data: {
            confirm: "ARE YOU CONTENT TO LET YOUR DREAMS REMAIN DREAMS?"
          } %>
  </p>
<% end %>
