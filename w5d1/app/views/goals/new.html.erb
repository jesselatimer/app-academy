<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>

  <label>Goal
    <textarea name="goal[text]"><%= @goal.text %></textarea>
  </label>
  <br>

  <label>Public?
    <input type="checkbox" name="goal[privateer]" value="false">
  </label>
  <br>

  <input type="submit" value="Add Goal" id="submit">
</form>
